// ðŸŽµ TESTE MULTITRACK - Para testar simultaneidade real
bpm 120; timesig 4/4;

instrument baixo: bass;
instrument guitarra: guitar;

// MÃºsica simples para testar mixer
loop 2 {
    play baixo: note "E2", 100, 1920ms;      // Bass longo (4 tempos)
    play guitarra: chord ["E3", "G3", "B3"], 90, 1920ms;  // Chord longo (4 tempos)
    play drums: kick, 110, 480ms;            // Kick (1 tempo)
    wait 480ms;
    
    play drums: snare, 100, 480ms;           // Snare (1 tempo)  
    wait 480ms;
    
    play drums: hihat, 80, 480ms;            // Hi-hat (1 tempo)
    wait 480ms;
    
    play drums: kick, 110, 480ms;            // Kick final (1 tempo)
    wait 480ms;
}

export "test_multitrack.wav";
