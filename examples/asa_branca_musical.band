// ü™ó ASA BRANCA - Vers√£o com Sistema Musical Simplificado
// Sem especificar ms! Usando nota√ß√£o musical tradicional

bpm 120; timesig 2/4;
default_duration quarter;
auto_advance true;

instrument sanfona: guitar;
instrument baixo: bass;

// === INTRO: Melodia caracter√≠stica ===
loop 2 {
    // Melodia principal (dura√ß√µes musicais tradicionais)
    play sanfona: note "G3", 90, half;         // M√≠nima
    play sanfona: note "A3", 85, quarter;      // Sem√≠nima
    
    play sanfona: note "B3", 95, half;         // M√≠nima
    play sanfona: note "C4", 90, quarter;      // Sem√≠nima
    
    play sanfona: note "D4", 100, half.;       // M√≠nima pontuada
    wait quarter;                              // Pausa de sem√≠nima
}

// === VERSE: Harmonia + baixo ===
loop 4 {
    // Acorde de G maior (sem especificar dura√ß√£o = usa default)
    play baixo: note "G2", 110;                // Autom√°tico: quarter
    play sanfona: chord ["G3", "B3", "D4"], 85, h;  // h = half (m√≠nima)
    
    // Baixo caminha
    play baixo: note "A2", 100;                // Autom√°tico: quarter
    
    // Acorde de C maior
    play baixo: note "C2", 110;                // Autom√°tico: quarter  
    play sanfona: chord ["C3", "E3", "G3"], 85, h;  // h = half (m√≠nima)
    
    // Volta para G
    play baixo: note "B2", 100;                // Autom√°tico: quarter
}

// === CHORUS: Bai√£o caracter√≠stico ===
loop 4 {
    // Ritmo de bai√£o com s√≠mbolos musicais
    play baixo: note "G2", 115, q;             // q = quarter
    play sanfona: chord ["G3", "B3", "D4"], 90, h;  // h = half
    
    // Batida caracter√≠stica (zabumba simulada)
    play drums: kick, 120, e;                  // e = eighth (colcheia)
    play drums: snare, 80, e;                  // e = eighth (colcheia)
    
    // Progress√£o harm√¥nica
    play baixo: note "D2", 110, q;             // q = quarter
    play sanfona: chord ["D3", "F#3", "A3"], 85, h;  // h = half
    
    play drums: kick, 115, e;                  // e = eighth (colcheia)
    play drums: hihat, 60, e;                  // e = eighth (colcheia)
    
    // Volta para t√¥nica
    play baixo: note "G2", 115, h;             // h = half
    play sanfona: chord ["G3", "B3", "D4"], 90, h;  // h = half
    
    play drums: snare, 85, e;                  // e = eighth (colcheia)
    play drums: kick, 110, e;                  // e = eighth (colcheia)
}

// === BRIDGE: Solo mel√≥dico ===
loop 2 {
    // Melodia inspirada (nossa cria√ß√£o) - usando valores variados
    play sanfona: note "D4", 95, quarter.;     // Sem√≠nima pontuada
    play baixo: note "G2", 100, h;             // h = half
    
    play sanfona: note "C4", 90, q;            // q = quarter
    play sanfona: note "B3", 95, quarter.;     // Sem√≠nima pontuada
    play sanfona: note "A3", 85, q;            // q = quarter
    
    play sanfona: note "G3", 100, h;           // h = half
    play baixo: note "C2", 100, h;             // h = half
    
    // Ornamento caracter√≠stico
    play sanfona: note "A3", 80, e;            // e = eighth
    play sanfona: note "G3", 90, quarter.;     // Sem√≠nima pontuada
}

// === BAI√ÉO COMPLETO: Todos os elementos ===
loop 4 {
    // Ritmo de bai√£o completo - misturando autom√°tico e especificado
    play baixo: note "G2", 120;                // Autom√°tico: quarter
    play sanfona: chord ["G3", "B3", "D4"], 95, h;  // h = half
    play drums: kick, 125, e;                  // e = eighth
    
    // Contratempo caracter√≠stico
    play drums: snare, 90, e;                  // e = eighth
    play drums: hihat, 70, e;                  // e = eighth
    
    // Progress√£o D7
    play baixo: note "D2", 115;                // Autom√°tico: quarter
    play sanfona: chord ["D3", "F#3", "A3"], 90, h;  // h = half
    play drums: kick, 120, e;                  // e = eighth
    
    play drums: snare, 85, e;                  // e = eighth
    play drums: kick, 115, e;                  // e = eighth
    
    // Volta G maior
    play baixo: note "G2", 120;                // Autom√°tico: quarter
    play sanfona: chord ["G3", "B3", "D4"], 95, h;  // h = half
    play drums: kick, 125, e;                  // e = eighth
    
    // Ornamento final do compasso
    play sanfona: note "A3", 80, s;            // s = sixteenth
    play drums: hihat, 75, e;                  // e = eighth
    play sanfona: note "G3", 85, e;            // e = eighth
}

// === FINAL: Cad√™ncia caracter√≠stica ===
loop 1 {
    // Prepara√ß√£o para final
    play baixo: note "D2", 115, h;             // h = half
    play sanfona: chord ["D3", "F#3", "A3"], 90, whole;  // Semibreve
    play drums: kick, 120;                     // Autom√°tico: quarter
    
    play drums: snare, 100;                    // Autom√°tico: quarter
    
    // Resolu√ß√£o final em G
    play baixo: note "G1", 127, whole;         // Semibreve
    play sanfona: chord ["G2", "B3", "D4", "G4"], 100, 4beat;  // 4 tempos
    play drums: kick, 127, h;                  // h = half
    
    // Sil√™ncio final
    wait whole;                                // Pausa de semibreve
}

