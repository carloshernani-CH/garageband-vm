    play drums: hihat, 127, quarter;
    play bass_heavy: note "A2", 127, quarter;
    play rhythm_guitar: chord ["A4", "C5", "E5"], 127, quarter;
    play power_chord_guitar: chord ["A5", "C6", "E6"], 127, quarter;
    play lead_guitar: chord ["A6", "C7"], 127, quarter;
    play stack_synth: chord ["A4", "E5"], 120, quarter;
    wait quarter;
}

// üé∏ GUITAR SOLO - Stack operations em m√∫sica (20 compassos)
loop 10 {
    // Solo √©pico representando PUSH/POP operations
    play drums: kick, 127, quarter;
    play drums: hihat, 100, quarter;
    play bass_heavy: note "E1", 127, quarter;
    play rhythm_guitar: chord ["E3", "G3", "B3"], 120, quarter;
    // PUSH operation - notas ascendentes
    play lead_guitar: note "E4", 127, sixteenth;
    wait sixteenth;
    play lead_guitar: note "G4", 125, sixteenth;
    wait sixteenth;
    play lead_guitar: note "B4", 127, sixteenth;
    wait sixteenth;
    play lead_guitar: note "E5", 127, sixteenth;
    wait sixteenth;
    
    play drums: snare, 127, quarter;
    play drums: hihat, 110, quarter;
    play bass_heavy: note "A1", 125, quarter;
    play rhythm_guitar: chord ["A3", "C4", "E4"], 115, quarter;
    // POP operation - notas descendentes
    play lead_guitar: note "A5", 127, eighth;
    wait eighth;
    play lead_guitar: note "E5", 125, eighth;
    wait eighth;
    
    play drums: kick, 120, eighth;
    play drums: hihat, 115, eighth;
    play bass_heavy: note "D2", 127, eighth;
    play lead_guitar: note "D6", 127, eighth;
    wait eighth;
    
