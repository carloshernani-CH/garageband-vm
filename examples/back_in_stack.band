    play drums: hihat, 127, quarter;
    play bass_heavy: note "A2", 127, quarter;
    play rhythm_guitar: chord ["A4", "C5", "E5"], 127, quarter;
    play power_chord_guitar: chord ["A5", "C6", "E6"], 127, quarter;
    play lead_guitar: chord ["A6", "C7", "E7"], 127, quarter;
    play stack_synth: chord ["A4", "E5", "A5"], 127, quarter;
    wait quarter;
}

// üé∏ OUTRO - Riff final (8 compassos)
loop 4 {
    // Volta ao riff cl√°ssico
    play drums: kick, 120, quarter;
    play bass_heavy: note "E1", 120, quarter;
    play rhythm_guitar: chord ["E2", "G2"], 110, quarter;
    wait quarter;
    
    play drums: snare, 110, eighth;
    play bass_heavy: note "E1", 115, eighth;
    play rhythm_guitar: chord ["E2", "G2"], 105, eighth;
    wait eighth;
    
    play drums: hihat, 100, eighth;
    play bass_heavy: note "E1", 125, eighth;
    play rhythm_guitar: chord ["E2", "G2"], 115, eighth;
    wait eighth;
    
    play drums: kick, 127, quarter;
    play bass_heavy: note "E2", 127, quarter;
    play rhythm_guitar: chord ["E3", "G3"], 120, quarter;
    play power_chord_guitar: chord ["E4", "G4"], 110, quarter;
