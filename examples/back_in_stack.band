    play drums: hihat, 127, quarter;
    play bass_heavy: note "C2", 127, quarter;
    play rhythm_guitar: chord ["C4", "E4", "G4"], 127, quarter;
    play lead_guitar: chord ["C6", "E6", "G6"], 127, quarter;
    play stack_synth: chord ["C4", "G4"], 115, quarter;
    wait quarter;
}

// üî• FINAL CHORUS - "I'M BACK IN STACK!" (16 compassos)
loop 8 {
    // Chorus final ainda mais intenso
    play drums: kick, 127, quarter;
    play drums: snare, 120, quarter;
    play drums: hihat, 127, quarter;
    play bass_heavy: note "E1", 127, quarter;
    play rhythm_guitar: chord ["E3", "G3", "B3"], 127, quarter;
    play power_chord_guitar: chord ["E4", "G4", "B4"], 127, quarter;
    play lead_guitar: chord ["E5", "G5", "B5"], 127, quarter;
    play stack_synth: chord ["E3", "B3", "E4"], 127, quarter;
    wait quarter;
    
    play drums: snare, 127, quarter;
    play drums: hihat, 127, quarter;
    play bass_heavy: note "A1", 127, quarter;
    play rhythm_guitar: chord ["A3", "C4", "E4"], 127, quarter;
    play power_chord_guitar: chord ["A4", "C5", "E5"], 127, quarter;
    play lead_guitar: chord ["A5", "C6", "E6"], 127, quarter;
    play stack_synth: chord ["A3", "E4", "A4"], 127, quarter;
    wait quarter;
    
    play drums: kick, 127, eighth;
    play drums: hihat, 127, eighth;
    play bass_heavy: note "D2", 127, eighth;
    play power_chord_guitar: chord ["D4", "A4"], 127, eighth;
    play lead_guitar: note "D7", 127, eighth;
    wait eighth;
    
