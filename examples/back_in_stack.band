// Final power chord
play drums: kick, 127, whole;
play bass_heavy: note "E1", 127, whole;
play rhythm_guitar: chord ["E3", "G3", "B3"], 127, whole;
play power_chord_guitar: chord ["E4", "G4", "B4"], 127, whole;
