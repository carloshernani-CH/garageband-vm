}

// === OUTRO: 808 sustentado + hi-hats fade ===
loop 2 {
    play bass808: note "C1", 100, 3840ms;     // 808 longo
    play drums: kick, 100, 240ms;
    wait 480ms;
    
    play drums: hihat, 60, 120ms;
    wait 240ms;
    play drums: hihat, 50, 120ms;
    wait 240ms;
    
    play drums: snare, 80, 200ms;
    wait 480ms;
    
    play drums: hihat, 40, 120ms;
    wait 480ms;
    
    // Fade out
    play drums: kick, 80, 200ms;
    wait 480ms;
    
    play drums: hihat, 30, 120ms;
    wait 480ms;
    
    wait 960ms;  // Sil칡ncio final
}

export "trap_beats.wav";
